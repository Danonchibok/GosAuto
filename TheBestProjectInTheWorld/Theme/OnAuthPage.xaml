                            BorderThickness="0"
                            VerticalAlignment="Center">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Text}"
                                       VerticalAlignment="Center"
                                       Foreground="White" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

