<UserControl x:Class="TheBestProjectInTheWorld.MVVM.View.DriverCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheBestProjectInTheWorld.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="710" d:DesignWidth="1000">
    <StackPanel Orientation="Vertical"
                Width="1000" Height="710">
        <TextBlock Text="Заполение водительского удостоверения"
                   FontSize="30"
                   Foreground="White"
                   Margin="0 0 0 5"/>

        <Border Height="550"
                Background="#1B2B4E"
                CornerRadius="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                  
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="1" Grid.Column="1" Text="ФИО Владельца" 
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="VIN номер авто"
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="2" Grid.Column="1" Text="Марка" 
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="2" Grid.Column="3" Text="Модель"
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="3" Grid.Column="1" Text="Тип ТС" 
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="3" Grid.Column="3" Text="Категория ТС" 
                         Style="{StaticResource carsViewTheme}"/>
                <ComboBox Grid.Row="4"  Grid.Column="5"
                         Style="{StaticResource ComboBoxFlatStyle}">
                    <TextBlock Text="Красный"/>
                    <TextBlock Text="Зеленый"/>
                    <TextBlock Text="Синий"/>
                    <TextBlock Text="Оранжевый"/>
                    <TextBlock Text="Желтый"/>
                    <TextBlock Text="Голубой"/>
                    <TextBlock Text="Фиолетовый"/>
                </ComboBox>

                <TextBox Grid.Row="4" Grid.Column="1" Text="Год выпуска" 
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="4" Grid.Column="3" Text="Номер цвет" 
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="5" Grid.Column="1" Text="Номер двигателя" 
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="5" Grid.Column="3" Text="Модель двигателя"
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="6" Grid.Column="1" Text="Мощность двигателя в кВт"
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="6" Grid.Column="3" Text="Мощность в лошадинных силах"
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="7" Grid.Column="1" Text="Год двигателя" 
                         Style="{StaticResource carsViewTheme}"/>
                
                <TextBox Grid.Row="8" Grid.Column="1" Text="Максимальная нагрузка(в кг)"
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="8" Grid.Column="3" Text="Мощность в лошадинных силах"
                         Style="{StaticResource carsViewTheme}"/>

                <TextBox Grid.Row="9" Grid.Column="1" Text="Вес автомобиля"
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="9" Grid.Column="3" Text="Тип двигателя"
                         Style="{StaticResource carsViewTheme}"/>
                
                <TextBox Grid.Row="10" Grid.Column="1" Text="Вес автомобиля(в кг)"
                         Style="{StaticResource carsViewTheme}"/>
                <TextBox Grid.Row="10" Grid.Column="3" Text="Тип привода"
                         Style="{StaticResource carsViewTheme}"/>

                
                <TextBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" 
                         Text="Комментарии"
                         Style="{StaticResource carsViewTheme}"/>
                
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 15 0 0">
            
            <Button Content="СОЗДАТЬ"
                    FontSize="16"
                    Background="White"
                    Foreground="Black"
                     Style="{StaticResource 2buttons}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
